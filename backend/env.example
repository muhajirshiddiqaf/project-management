# ========================================
# PROJECT MANAGEMENT & QUOTATION SYSTEM
# Environment Variables Configuration
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000
HOST=localhost

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project_management
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Alternative: Use DATABASE_URL instead of individual DB_* variables
# DATABASE_URL=postgres://postgres:password@localhost:5432/project_management

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# TWO-FACTOR AUTHENTICATION
# ========================================
TWO_FACTOR_SECRET=your-2fa-secret-key-change-this-in-production

# ========================================
# EMAIL CONFIGURATION (SendGrid)
# ========================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Project Management System

# ========================================
# FILE UPLOAD & STORAGE
# ========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ========================================
# PDF GENERATION
# ========================================
PDF_OUTPUT_PATH=./generated-pdfs
PDF_TEMPLATE_PATH=./templates/pdf

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ========================================
# CACHING
# ========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ========================================
# SUBSCRIPTION & BILLING (Stripe)
# ========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ========================================
# MONITORING & ANALYTICS
# ========================================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# ========================================
# SECURITY
# ========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
COOKIE_SECRET=your-cookie-secret-change-this-in-production

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_TWO_FACTOR=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SUBSCRIPTION_BILLING=true
ENABLE_PDF_GENERATION=true
ENABLE_EMAIL_CAMPAIGNS=true

# ========================================
# DEVELOPMENT & TESTING
# ========================================
DEBUG=true
TEST_DATABASE_URL=postgres://postgres:password@localhost:5432/project_management_test

# ========================================
# EXTERNAL SERVICES
# ========================================
# Slack Integration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_BOT_TOKEN=your-slack-bot-token

# Google Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ========================================
# NOTIFICATIONS
# ========================================
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_PUBLIC_KEY=your-push-public-key
PUSH_PRIVATE_KEY=your-push-private-key

# ========================================
# BACKUP & STORAGE
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ========================================
# API DOCUMENTATION
# ========================================
SWAGGER_ENABLED=true
SWAGGER_TITLE=Project Management & Quotation API
SWAGGER_DESCRIPTION=API documentation for Project Management and Quotation System
SWAGGER_VERSION=1.0.0
SWAGGER_HOST=localhost:3000
SWAGGER_BASE_PATH=/api

# ========================================
# INTERNATIONALIZATION
# ========================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,id
I18N_PATH=./locales

# ========================================
# QUEUE & BACKGROUND JOBS
# ========================================
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# ========================================
# SEARCH & INDEXING
# ========================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=project_management

# ========================================
# WEBSOCKET & REAL-TIME
# ========================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001

# ========================================
# HEALTH CHECK
# ========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# ========================================
# AUDIT & COMPLIANCE
# ========================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
COMPLIANCE_MODE=false

# ========================================
# PERFORMANCE & OPTIMIZATION
# ========================================
COMPRESSION_ENABLED=true
GZIP_LEVEL=6
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_TTL=300

# ========================================
# ERROR HANDLING
# ========================================
ERROR_REPORTING_ENABLED=true
ERROR_NOTIFICATION_EMAIL=errors@yourdomain.com
ERROR_SLACK_CHANNEL=#errors

# ========================================
# MAINTENANCE MODE
# ========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# ========================================
# DEVELOPMENT TOOLS
# ========================================
NODE_PG_MIGRATE_CONFIG=./node-pg-migrate.config.js
MIGRATION_LOG_FILE=./logs/migration.log
SEED_DATA_PATH=./src/infrastructure/database/seeds

# ========================================
# TESTING CONFIGURATION
# ========================================
TEST_TIMEOUT=10000
TEST_RETRIES=3
COVERAGE_THRESHOLD=80
COVERAGE_REPORTS_PATH=./coverage

# ========================================
# DOCKER CONFIGURATION
# ========================================
DOCKER_IMAGE_NAME=project-management-api
DOCKER_IMAGE_TAG=latest
DOCKER_CONTAINER_NAME=project-management-api
DOCKER_NETWORK_NAME=project-management-network

# ========================================
# DEPLOYMENT
# ========================================
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_CLUSTER=project-management-cluster

# ========================================
# MONITORING & METRICS
# ========================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
PROMETHEUS_ENABLED=true

# ========================================
# SECURITY HEADERS
# ========================================
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION_ENABLED=true
CONTENT_TYPE_NOSNIFF_ENABLED=true
FRAMEGUARD_ENABLED=true

# ========================================
# API VERSIONING
# ========================================
API_VERSION=v1
API_PREFIX=/api/v1
LEGACY_API_SUPPORT=true

# ========================================
# WEBHOOK CONFIGURATION
# ========================================
WEBHOOK_ENABLED=true
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=5000
WEBHOOK_MAX_RETRIES=3

# ========================================
# EXPORT/IMPORT
# ========================================
EXPORT_PATH=./exports
IMPORT_PATH=./imports
EXPORT_FORMATS=json,csv,xlsx,pdf
IMPORT_FORMATS=json,csv,xlsx

# ========================================
# NOTIFICATION TEMPLATES
# ========================================
EMAIL_TEMPLATE_PATH=./templates/email
SMS_TEMPLATE_PATH=./templates/sms
PUSH_TEMPLATE_PATH=./templates/push

# ========================================
# INTEGRATION TOKENS
# ========================================
# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# GitLab Integration
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret

# Bitbucket Integration
BITBUCKET_CLIENT_ID=your-bitbucket-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret

# ========================================
# CUSTOMIZATION
# ========================================
BRAND_NAME=Project Management System
BRAND_LOGO_URL=https://yourdomain.com/logo.png
BRAND_PRIMARY_COLOR=#3B82F6
BRAND_SECONDARY_COLOR=#1F2937
BRAND_FAVICON_URL=https://yourdomain.com/favicon.ico

# ========================================
# FEATURE CONFIGURATION
# ========================================
ENABLE_PROJECT_TEMPLATES=true
ENABLE_TIME_TRACKING=true
ENABLE_EXPENSE_TRACKING=true
ENABLE_RESOURCE_MANAGEMENT=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_CHANGE_MANAGEMENT=true
ENABLE_QUALITY_MANAGEMENT=true
ENABLE_PROCUREMENT_MANAGEMENT=true
ENABLE_STAKEHOLDER_MANAGEMENT=true
ENABLE_COMMUNICATION_MANAGEMENT=true
ENABLE_INTEGRATION_MANAGEMENT=true
ENABLE_SCOPE_MANAGEMENT=true
ENABLE_SCHEDULE_MANAGEMENT=true
ENABLE_COST_MANAGEMENT=true
ENABLE_QUALITY_MANAGEMENT=true
ENABLE_RESOURCE_MANAGEMENT=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_PROCUREMENT_MANAGEMENT=true
ENABLE_STAKEHOLDER_MANAGEMENT=true
