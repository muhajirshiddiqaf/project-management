{
  "name": "project-management-backend",
  "version": "1.0.0",
  "description": "SaaS Project Management & Quotation System Backend with Clean Architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "nodemon src/server.js",
    "start:dev": "nodemon src/server.js",
    "start:staging": "NODE_ENV=staging node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node src/infrastructure/database/migrate.js create",
    "migrate:status": "node-pg-migrate status",
    "test:performance": "jest --testNamePattern='performance'",
    "migrate:run": "node src/infrastructure/database/migrate.js run",
    "migrate:rollback": "node src/infrastructure/database/migrate.js rollback",
    "seed": "node src/infrastructure/database/seed.js",
    "build": "echo 'No build step required for Node.js'"
  },
  "keywords": [
    "saas",
    "project-management",
    "quotation",
    "nodejs",
    "hapi",
    "clean-architecture",
    "postgresql"
  ],
  "author": "Project Management Team",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/good": "^9.0.1",
    "@hapi/good-console": "^9.0.1",
    "@hapi/good-squeeze": "^6.0.0",
    "@hapi/hapi": "^21.4.0",
    "@hapi/inert": "^7.1.0",
    "@hapi/joi": "^17.1.1",
    "@hapi/jwt": "^3.2.0",
    "@hapi/vision": "^6.1.0",
    "@hapi/yar": "^11.0.3",
    "@sendgrid/mail": "^8.1.1",
    "archiver": "^6.0.1",
    "aws-sdk": "^2.1473.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.6.1",
    "express-async-errors": "^3.1.1",
    "hapi-swagger": "^17.3.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "puppeteer": "^21.5.2",
    "qrcode": "^1.5.3",
    "redis": "^4.6.10",
    "speakeasy": "^2.0.0",
    "stripe": "^14.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui": "^5.27.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/infrastructure/database/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80,
    "semi": true
  }
}
