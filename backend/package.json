{
  "name": "project-management-backend",
  "version": "1.0.0",
  "description": "SaaS Project Management & Quotation System Backend with Clean Architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:dev": "nodemon src/server.js",
    "start:staging": "NODE_ENV=staging node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest --testNamePattern='performance'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "migrate:create": "node src/infrastructure/database/migrate.js create",
    "migrate:run": "node src/infrastructure/database/migrate.js run",
    "migrate:rollback": "node src/infrastructure/database/migrate.js rollback",
    "seed": "node src/infrastructure/database/seed.js",
    "build": "echo 'No build step required for Node.js'"
  },
  "keywords": [
    "saas",
    "project-management",
    "quotation",
    "nodejs",
    "hapi",
    "clean-architecture",
    "postgresql"
  ],
  "author": "Project Management Team",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^21.3.8",
    "@hapi/joi": "^17.1.1",
    "@hapi/boom": "^10.0.1",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^6.0.1",
    "@hapi/good": "^9.0.4",
    "@hapi/good-console": "^9.0.1",
    "@hapi/good-file": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "stripe": "^14.7.0",
    "aws-sdk": "^2.1473.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.4.3",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/infrastructure/database/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80,
    "semi": true
  }
}
